<h1>Book detail</h1>
<table>
  <tbody>
    <tr>
      <td>
        <%= image_tag book.get_profile_image(100,100) %><br>
        <%=link_to @book.user.name, users_path %>
      </td>
      <td><%=link_to @book.title, book_path(@book.id)%></td>
      <td><%= @book.body %></td>
      <% if @book.user == current_user %>
      <td><%=link_to "Edit", edit_book_path(book.id)%></br></td>
      <td><%=link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></br></td>
      <% end %>
    </tr>
  </tbody>
</table>