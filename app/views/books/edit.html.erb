<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
        <div>
        <% if @book.errors.any? %>
          <h3><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        </div>
      <%= form_with model: @book do |f| %>
        <div>
          <div>
            <label for="inputTitle">Title</label>
          </div>
          <div>
            <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"タイトル"%>
          </div>
        </div>
        <div>
          <div>
            <label for="inputOpinion">Opinion</label>
          </div>
          <div>
            <%= f.text_area :body, autofocus: true, id:"inputOpinion", placeholder:"本文"%>
          </div>
        </div>
        <div>
          <%= f.submit "Update Book", class:"btn btn-success"%>
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book.id)%>
      <a> | <a/>
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>