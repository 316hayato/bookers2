<h2>Editing Book</h2><br>
<%= form_with model: @book do |f| %>
  <label for="inputTitle">Title</label><br>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"タイトル"%><br>
  <label for="inputOpinion">Opinion</label><br>
  <%= f.text_area :body, autofocus: true, id:"inputOpinion", placeholder:"本文"%><br>
  <%= f.submit "Update Book" %>
<% end %>

<%= link_to "Show", book_path(@book.id)%> 
<%= link_to "Back", books_path %>