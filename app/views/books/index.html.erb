<div>
  <h2>User info</h2><br>
  <table>
    <tbody>
      <%= image_tag current_user.get_profile_image(100,100) %><br>
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <p><%= link_to "プロフィール編集", edit_user_path(current_user.id) %></p>
</div>

<h1>NewBook</h1>
  <%= form_with model: @book, url: '/books', method: :post do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Book detail</h1>
<table>
  <thead>
    <tr>
      <th><!--ユーザーアイコン用スペース--></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= image_tag book.user.get_profile_image(100,100) %><br>
      </td>
      <td><%=link_to book.title, book_path(book.id)%></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
