<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <div>
        <% if @user.errors.any? %>
          <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        </div>
      <%= form_with model: @user do |f| %>
        <div>
          <div>
            <label for="inputName">Name</label>
          </div>
          <div>
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
          </div>
        </div>
        <div>
          <div>
            <label for="user">Image</label>
          </div>
          <div>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          </div>
        </div>
        <div>
          <div>
            <label for="inputIntroduction">Introduction</label>
          </div>
          <div>
            <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介"%>
          </div>
        </div>
        <div>
          <%= f.submit "Update User", class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>