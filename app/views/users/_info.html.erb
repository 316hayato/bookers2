<div>
  <h2>User info</h2><br>
  <%= image_tag user.get_profile_image(100,100) %><br>
  <table>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <% if user == current_user %>
  <li>
    <%= link_to edit_user_path(user) do %>
    <i class="fa-solid fa-user-gear"></i>
    <% end %>
  </li>
  <% else %>
  <li>
    <%= link_to user_path(current_user.id) do %>
    <i class="fa-solid fa-user-gear"></i>
    <% end %>
  </li>
  <% end %>
</div>