<!-- ユーザーの詳細 -->
<div>
  <h2>User info</h2><br>
  <%= image_tag @user.get_profile_image(100,100) %><br>
  <table>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
</div>

<!-- ユーザーの投稿一覧 -->
<h1>Book detail</h1>
<table>
  <thead>
    <tr>
      <th><!--ユーザーアイコン用スペース--></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= image_tag 'sample-author1.jpg' %><br>
        <%=link_to  book.user.name, users_path %>
      </td>
      <td><%=link_to book.title, book_path(book.id)%></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>